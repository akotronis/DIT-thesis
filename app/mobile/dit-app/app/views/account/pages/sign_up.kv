#:kivy 2.3.1

<SignUpScreen>:
    MDCard:
        pos_hint: {"center_x":.5, "center_y":.5}
        size_hint: .8, .5
        padding: 20
        style: "elevated"
        elevation_level: 5
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            MDLabel:
                pos_hint: {"center_x":.5, "center_y":.5}
                halign: "center"
                height: self.texture_size[1]
                text: "SIGN UP"
                font_style: "Display"
                role: "small"
            MDTextField:
                id: username_input
                mode: "outlined"
                radius: dp(20)
                pos_hint: {"center_x":.5}
                MDTextFieldHintText:
                    text: "username"
                MDTextFieldTrailingIcon:
                    icon: "account"
            MDTextField:
                id: password_input
                mode: "outlined"
                radius: dp(16)
                pos_hint: {"center_x":.5}
                password: True
                MDTextFieldHintText:
                    text: "password"
                MDTextFieldTrailingIcon:
                    id: password_icon
                    icon: "eye-off"
            MDTextField:
                id: confirm_password_input
                mode: "outlined"
                radius: dp(16)
                pos_hint: {"center_x":.5}
                password: True
                MDTextFieldHintText:
                    text: "confirm-password"
                MDTextFieldTrailingIcon:
                    id: confirm_password_icon
                    icon: "eye-off"
            MySwitch:
                label_text: "Show password"
                height: username_input.height
                password_input: password_input
                password_icon: password_icon
                confirm_password_input: confirm_password_input
                confirm_password_icon: confirm_password_icon
                switch_toggle_callback: app.toggle_password_visibility
            MDButton:
                pos_hint: {"center_x":.5}
                width: username_input.width
                height: username_input.height
                style: "filled"
                on_release:
                    app.register_user(username_input.text, password_input.text, confirm_password_input.text)
                MDButtonText:
                    text: "Submit"
                    pos_hint: {"center_x": .5, "center_y": .5}